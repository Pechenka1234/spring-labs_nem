<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:myApp.properties"/>

    <bean id="collar" class="org.chdtu.Collar">
        <constructor-arg value="${collar.color}"/>
        <constructor-arg value="${collar.size}"/>

    </bean>

    <bean id="dog" class="org.chdtu.Dog">
        <constructor-arg ref="collar"/>
        <property name="name" value="${dog.name}"/>
    </bean>

    <bean id="person" class="org.chdtu.Person">
        <property name="pet" ref="dog"/>
        <property name="surname" value="${person.surname}"/>
        <property name="age" value="${person.age}"/>
    </bean>

</beans>